<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.nciuclea.oopzoomvp.ui.welcome.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome" >
        <action
            android:id="@+id/action_welcomeFragment_to_allAnimalsFragment"
            app:destination="@id/allAnimalsFragment" />
    </fragment>
    <fragment
        android:id="@+id/allAnimalsFragment"
        android:name="com.example.nciuclea.oopzoomvp.ui.allanimals.AllAnimalsFragment"
        android:label="fragment_all_animals"
        tools:layout="@layout/fragment_all_animals" >
        <action
            android:id="@+id/action_allAnimalsFragment_to_animalDescriptionFragment"
            app:destination="@id/animalDescriptionFragment" />
    </fragment>
    <fragment
        android:id="@+id/animalDescriptionFragment"
        android:name="com.example.nciuclea.oopzoomvp.ui.animaldescription.AnimalDescriptionFragment"
        android:label="fragment_animal_description"
        tools:layout="@layout/fragment_animal_description" >
        <argument
            android:name="animalId"
            android:defaultValue="-1"
            app:argType="integer" />
    </fragment>
</navigation>