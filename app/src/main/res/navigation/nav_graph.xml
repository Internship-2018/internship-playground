<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.nciuclea.oopzoomvp.WelcomeScreen.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome" >
        <action
            android:id="@+id/action_welcomeFragment_to_zooFragment"
            app:destination="@id/zooFragment" />
    </fragment>
    <fragment
        android:id="@+id/zooFragment"
        android:name="com.example.nciuclea.oopzoomvp.ZooScreen.ZooFragment"
        android:label="fragment_zoo"
        tools:layout="@layout/fragment_zoo" >
        <action
            android:id="@+id/action_zooFragment_to_animalFragment"
            app:destination="@id/animalFragment" />
    </fragment>
    <fragment
        android:id="@+id/animalFragment"
        android:name="com.example.nciuclea.oopzoomvp.AnimalScreen.AnimalFragment"
        android:label="fragment_animal"
        tools:layout="@layout/fragment_animal" />
</navigation>